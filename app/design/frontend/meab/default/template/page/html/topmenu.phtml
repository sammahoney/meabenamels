/**
 * Top menu for store
 *
 * @see Mage_Page_Block_Html_Topmenu
 */
?>
<?php $_menu = $this->getHtml('level-top') ?>

<?php if($_menu): ?>
    <nav id="nav">
        <ul class="nav-primary">
            <?php echo $_menu ?>
        </ul>
        <?php // Check for associated CMS block
		if(Mage::getModel('cms/block')->load('menu_promo')->getIsActive()){
		    echo $this->getLayout()->createBlock('cms/block')->setBlockId('menu_promo')->toHtml();
		};
		?>
    </nav>
<?php endif ?>

<script type="text/javascript">
jQuery(document).ready(function() {
    jQuery('a.skip-link.skip-nav').sidr({
        side: 'left',
        source: '#nav'
    });
    // Add menu accordions
    jQuery("ul.sidr-class-level1").hide();
    jQuery("li.sidr-class-level1.sidr-class-parent > a").click(function(e) {
        e.preventDefault();
        if (jQuery(this).next("ul.sidr-class-level1").is(":hidden")) {
            jQuery(this).addClass("active").next("ul.sidr-class-level1").slideDown("normal");
        } else {
            jQuery(this).removeClass("active").next("ul.sidr-class-level1").slideUp("normal");
        }
    });
});
</script>